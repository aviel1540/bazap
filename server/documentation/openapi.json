{
	"openapi": "3.0.3",
	"info": {
		"description": "Bazap Follower",
		"version": "1.0.0",
		"title": "Bazap",
		"contact": {
			"name": "Bazap",
			"email": ""
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		}
	},
	"servers": [
		{
			"url": "http://localhost:5000/api",
			"description": "Sandbox"
		}
	],
	"paths": {
		"/device/{id}": {
			"get": {
				"tags": ["Device"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					},
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": { "type": "string" }
					}
				],
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/device/find-by-serialNumber/{serialnumber}": {
			"get": {
				"tags": ["Device"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					},
					{
						"name": "serialnumber",
						"in": "path",
						"required": true,
						"schema": { "type": "string" }
					}
				],
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/device/add-new-device": {
			"post": {
				"tags": ["Device"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"serialNumber": { "type": "string" },
									"category": { "type": "string" },
									"type": { "type": "string" }
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/device/update-status/{id}": {
			"patch": {
				"tags": ["Device"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					},
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": { "type": "string" }
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"place": { "type": "string" }
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/device/update-report/{id}": {
			"patch": {
				"tags": ["Device"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					},
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": { "type": "string" }
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"status": { "type": "string" },
									"fixedBy": { "type": "string" },
									"notes": { "type": "string" }
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/project/add-new-project": {
			"post": {
				"tags": ["Project"],
				"summary": "Register to the app",
				"parameters": [
					{
						"name": "token",
						"in": "header",
						"schema": { "type": "string" }
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"projectName": { "type": "string" },
									"unit": { "type": "string" }
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		}
	}
}
